{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@database/*": ["src/db/*"],
      "@modules/*": ["src/app/modules/*"],
      "@models/*": ["src/app/lib/models/*"],
      "@lib/*": ["src/app/lib/*"],
      "@repository/*": ["src/app/repository/*"],
      "@route/*": ["src/routes/*"],
      "@utils/*": ["src/server/utils/*"],
      "@helpers/*": ["src/app/helpers/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}
